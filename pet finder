local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")

-- ID del servidor privado al que deseas teletransportar a los jugadores
local serverId = "https://www.roblox.com/share?code=57aa40db90476e41ad08389ddd7e6a8f&type=Server"  -- Reemplaza esto con el ID de tu servidor

-- Función para mostrar la pantalla de carga
local function showLoadingScreen(player)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "LoadingScreen"
    screenGui.Parent = player:WaitForChild("PlayerGui")

    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BackgroundColor3 = Color3.new(0, 0, 0)
    frame.Parent = screenGui

    local textLabel = Instance.new("TextLabel")
    textLabel.Size = UDim2.new(1, 0, 1, 0)
    textLabel.BackgroundTransparency = 1
    textLabel.TextColor3 = Color3.new(1, 1, 1)
    textLabel.Text = "Te estás uniendo a un lugar con muchas cosas de steal a brainrot. No te preocupes, aquí tienes toda la información que necesitas."
    textLabel.TextScaled = true
    textLabel.Parent = frame

    -- Esperar 90 segundos antes de eliminar la pantalla de carga y teletransportar al jugador
    wait(90)
    screenGui:Destroy()
    TeleportService:TeleportToPlaceInstance(serverId, player, player)
end

-- Evento para detectar cuando un jugador se une al servidor
Players.PlayerAdded:Connect(function(player)
    showLoadingScreen(player)
end)
